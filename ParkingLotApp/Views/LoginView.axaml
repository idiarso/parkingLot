<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ParkingLotApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ParkingLotApp.Views.LoginView"
             x:DataType="vm:LoginViewModel">

    <UserControl.Styles>
        <!-- Style for input fields -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#37474F"/>
            <Setter Property="Foreground" Value="#ECEFF1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="TextBox:focus">
            <Setter Property="Background" Value="#455A64"/>
        </Style>
        
        <!-- Style for the login button -->
        <Style Selector="Button.login">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.login:pointerover">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>
        
        <Style Selector="Button.login:pressed">
            <Setter Property="Background" Value="#0D47A1"/>
        </Style>
    </UserControl.Styles>

    <Grid Background="#1E2A31">
        <Border Width="420" 
                Height="500"
                Background="#263238"
                CornerRadius="8"
                BoxShadow="0 4 8 0 #0F1518">
            <Grid RowDefinitions="Auto,*,Auto" Margin="40">
                <!-- Header -->
                <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,40">
                    <!-- Logo Container -->
                    <Border Width="80" 
                            Height="80" 
                            CornerRadius="40" 
                            Background="#37474F" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15">
                        <TextBlock Text="P" 
                                   Foreground="#4CAF50"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Text="Welcome Back"
                             FontSize="28"
                             FontWeight="Bold"
                             Foreground="#ECEFF1"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="Please sign in to continue"
                             FontSize="14"
                             Foreground="#78909C"
                             HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Login Form -->
                <StackPanel Grid.Row="1" Spacing="20">
                    <!-- Username -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Username"
                                 Foreground="#ECEFF1"/>
                        <TextBox Text="{Binding Username}"
                                Watermark="Enter your username"
                                IsEnabled="{Binding !IsProcessing}"/>
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Spacing="5">
                        <TextBlock Text="Password"
                                 Foreground="#ECEFF1"/>
                        <TextBox Text="{Binding Password}"
                                PasswordChar="â€¢"
                                Watermark="Enter your password"
                                IsEnabled="{Binding !IsProcessing}"/>
                    </StackPanel>

                    <!-- Remember Me Checkbox -->
                    <CheckBox Content="Remember me" 
                              IsChecked="{Binding RememberMe}"
                              Foreground="#B0BEC5"
                              Margin="0,5,0,0"/>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}"
                             Foreground="#FF5252"
                             TextWrapping="Wrap"
                             Margin="0,5,0,0" 
                             IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                    <!-- Login Button -->
                    <Button Content="Sign In"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding !IsProcessing}"
                            Classes="login"
                            Margin="0,10,0,0"
                            Height="45"/>

                    <!-- Loading Indicator -->
                    <ProgressBar IsIndeterminate="True"
                               IsVisible="{Binding IsProcessing}"
                               Foreground="#2196F3"
                               Height="4"
                               Margin="0,10"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel Grid.Row="2" Spacing="5">
                    <TextBlock Text="Parking Lot Management System"
                             Foreground="#78909C"
                             FontSize="12"
                             HorizontalAlignment="Center"/>
                    <TextBlock Text="v1.0.0"
                             Foreground="#546E7A"
                             FontSize="10"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl> 